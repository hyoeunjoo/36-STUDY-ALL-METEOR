class Solution {
    public long solution(int cap, int n, int[] deliveries, int[] pickups) {
        long answer = 0;
        
        // 배달과 수거를 각각 누적합으로 계산
        int deliverySum = 0;
        int pickupSum = 0;
        
        // 가장 먼 집부터 처리
        for (int i = n - 1; i >= 0; i--) {
            deliverySum += deliveries[i];
            pickupSum += pickups[i];
            
            // 이 위치까지 가야 할 필요가 있다면, 배달 or 수거가 남아있다면
            while (deliverySum > 0 || pickupSum > 0) {
                // 왕복 거리
                answer += (i + 1) * 2;
                
                // 트럭 용량만큼 계속 처리함
                deliverySum -= cap;
                pickupSum -= cap;
            }
        }
        
        return answer;
    }
}